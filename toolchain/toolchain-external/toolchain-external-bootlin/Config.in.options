config BR2_TOOLCHAIN_EXTERNAL_BOOTLIN_ARCH
	string
	default "aarch64"		if BR2_aarch64
	default "aarch64be"		if BR2_aarch64_be
	# FIXME check if 750d and 770d are compatible
	default "arcle-750d"		if BR2_arc750d || BR2_arc770d
	default "arcle-hs38"		if BR2_archs38
	default "armebv7-eabihf"	if BR2_ARM_CPU_ARMV7 && BR2_ARM_EABIHF
	default "armv5-eabi"		if BR2_ARM_CPU_ARMV5 && BR2_ARM_EABI

if BR2_TOOLCHAIN_EXTERNAL_BOOTLIN

choice
	prompt "Bootlin toolchain version"

config BR2_TOOLCHAIN_EXTERNAL_BOOTLIN_VARIANT_STABLE
	bool "stable"
	select BR2_TOOLCHAIN_HEADERS_AT_LEAST_4_1
	select BR2_TOOLCHAIN_GCC_AT_LEAST_6

config BR2_TOOLCHAIN_EXTERNAL_BOOTLIN_VARIANT_BLEEDING_EDGE
	bool "bleeding-edge"
	select BR2_TOOLCHAIN_HEADERS_AT_LEAST_4_9
	select BR2_TOOLCHAIN_GCC_AT_LEAST_7
	select BR2_TOOLCHAIN_HAS_NATIVE_RPC

endchoice

config BR2_TOOLCHAIN_EXTERNAL_BOOTLIN_VARIANT
	string
	default "stable"	if BR2_TOOLCHAIN_EXTERNAL_BOOTLIN_VARIANT_STABLE
	default "bleeding-edge" if BR2_TOOLCHAIN_EXTERNAL_BOOTLIN_VARIANT_BLEEDING_EDGE

choice
	prompt "Bootlin toolchain C library"

config BR2_TOOLCHAIN_EXTERNAL_BOOTLIN_LIBC_GLIBC
	bool "glibc"

config BR2_TOOLCHAIN_EXTERNAL_BOOTLIN_LIBC_UCLIBC
	bool "uclibc"

config BR2_TOOLCHAIN_EXTERNAL_BOOTLIN_LIBC_MUSL
	bool "musl"

endchoice

config BR2_TOOLCHAIN_EXTERNAL_BOOTLIN_LIBC
	string
	default "glibc"		if BR2_TOOLCHAIN_EXTERNAL_BOOTLIN_LIBC_GLIBC
	default "uclibc" 	if BR2_TOOLCHAIN_EXTERNAL_BOOTLIN_LIBC_UCLIBC
	default "musl" 		if BR2_TOOLCHAIN_EXTERNAL_BOOTLIN_LIBC_MUSL

config BR2_TOOLCHAIN_EXTERNAL_PREFIX
	default "aarch64-linux"	if BR2_aarch64

config BR2_PACKAGE_PROVIDES_TOOLCHAIN_EXTERNAL
	default "toolchain-external-bootlin"

endif
